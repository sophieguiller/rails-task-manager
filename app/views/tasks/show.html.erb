<p><%= @task.completed %></p>
<h3><%= @task.title %></h3>
<p><%= @task.details %></p>

<%= link_to "Edit #{@task.title}", edit_task_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Back to list", tasks_path %>